  <body role="document">

    <div class="row">
      <div class="col-md-12">
        <div class="container theme-showcase" role="main">
            <div class="jumbotron">
                <h1>Assignment 4</h1>
                <p>allow users to Create, Read, Update, and Delete movies</p>
            </div>

            <form id="movie-form">
              <row>
                <div class="col-md-4">
                  <fieldset class="form-group">
                    <label>Movie title</label>
                    <input class="form-control" id="movie-title" placeholder="Enter title">
                  </fieldset>
                </div>
                <div class="col-md-4">
                  <fieldset class="form-group">
                    <label>Movie rating</label>
                    <input  class="form-control" id="movie-rating" placeholder="Enter rating">
                  </fieldset>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary">Create movie</button>
                </div>
              </row>
            </form>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Rating</th>
                    <th>Operation</th>
                </tr>
                </thead>

                <tbody id="movie_table">
                </tbody>
            </table>
        </div>

      </div>
    </div>


        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
